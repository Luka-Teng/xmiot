{
  "name": "root",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "server": "xmiot-server",
    "xmiot-prettier": "node scripts/xmiot-prettier",
    "bootstrap": "lerna exec npm i",
    "init": "node scripts/init.js",
    "test": "cross-env NODE_ENV=test jest --no-cache",
    "debug-test": "node --inspect-brk $(npm bin)/jest --no-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run xmiot-prettier",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.js"
    ],
    "collectCoverage": false,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/packages/$1",
      "^root/(.*)$": "<rootDir>/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "testRegex": "/__tests__/.*\\.test\\.js$",
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "\\.(jsx?|tsx?)$": "<rootDir>/tests/codeTransform.js",
      "^.+\\.css$": "<rootDir>/tests/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/tests/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$",
      "node_modules/[^/]+?/(?!(es|node_modules)/)"
    ],
    "globals": {
      "ts-config": "temp"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^8.2.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.11.0",
    "chalk": "^2.4.1",
    "consolidate": "^0.15.1",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-15": "^1.3.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.12",
    "husky": "^1.1.2",
    "inquirer": "^6.2.0",
    "jest": "^24.0.0",
    "lerna": "^3.4.3",
    "less": "^3.8.1",
    "lint-staged": "^7.3.0",
    "metalsmith": "^2.3.0",
    "minimatch": "^3.0.4",
    "ora": "^3.0.0",
    "postcss": "^7.0.21",
    "prettier": "1.14.3",
    "react-dom": "^16.7.0",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-file-as-blob": "^1.1.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^3.0.0",
    "semver": "^5.6.0",
    "simple-git": "^1.107.0",
    "ts-jest": "^24.0.0",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "react": "^16.10.2",
    "rollup-plugin-json": "^4.0.0",
    "save-dev": "0.0.1-security",
    "xmiot-server": "^1.2.18"
  },
  "lastCommit": "fd7924b8cc3a19cf89be504dd3967d4df89ac697"
}
